
{{> header }}

<h1>{{employee.name}} {{employee.lastname}}'s calendar</h1>

<div class="row">
    <div class="col-md-3">Employee calendar</div>
    <form id="book_time_off_frm" method="POST" action="">
    <div class="col-md-3 col-md-offset-6">
        <button type="button" class="btn btn-info pull-right" data-toggle="modal" data-target="#exampleModal" data-whatever="@mdo">Book time off</button>
    </div>
    </form>
</div>

<div class="row">&nbsp;</div>

{{> show_flash_messages }}

<nav>
  <ul class="pager">
    <li class="previous disabled"><a href="#"><span aria-hidden="true">&larr;</span> 2014</a></li>
    <span>January - December 2015</span>

    <li class="next disabled"><a href="#">2016 <span aria-hidden="true">&rarr;</span></a></li>
  </ul>
</nav>

<div class="row clearfix">

    {{# each calendar}}
    <div class="col-md-3 month_container">
        <table class="calendar_month">
        <thead>
        <tr>
            <td colspan="14">{{ this.month }}</td>
        </tr>
        <tr>
            <td colspan="2">M</td>
            <td colspan="2">T</td>
            <td colspan="2">W</td>
            <td colspan="2">T</td>
            <td colspan="2">F</td>
            <td colspan="2">S</td>
            <td colspan="2">S</td>
        </tr>
        </thead>
        <tbody>
        {{#each this.weeks }}
        <tr>
            {{#each this}}
            <td class="half_1st {{#if this.is_bank_holiday}}bank_holiday_cell{{/if}} {{#if this.is_weekend}}weekend_cell{{/if}}"><span>{{this.val}}</span></td>
            <td class="half_2nd {{#if this.is_bank_holiday}}bank_holiday_cell{{/if}} {{#if this.is_weekend}}weekend_cell{{/if}}"></td>
            {{/each}}
        </tr>
        {{/each}}
 
        </tbody></table>
    </div>
    {{/each}}

</div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="exampleModalLabel">Book time off</h4>
      </div>
      <div class="modal-body">
        <form>

          <div class="form-group">
            <label for="employee" class="control-label">For employee:</label>
            <select class="form-control" id="employee">
                <option></option>
            </select>
          </div>

          <div class="form-group">
            <label for="leave_type" class="control-label">Leave type:</label>
            <select class="form-control" id="leave_type">
                <option></option>
            </select>
          </div>

          <div class="form-group">
            <label for="from" class="control-label">From:</label>
            <div class="row">
              <div class="col-md-7">
                <input type="text" class="form-control" id="from">
              </div>
              <div class="col-md-5">
                <select class="form-control">
                    <option></option>
                </select>
              </div>
            </div>
          </div>

          <div class="form-group">
            <label for="to" class="control-label">To:</label>
            <div class="row">
              <div class="col-md-7">
                <input type="text" class="form-control" id="to">
              </div>
              <div class="col-md-5">
                <select class="form-control">
                    <option></option>
                </select>
              </div>
            </div>
          </div>

          <div class="form-group">
            <label for="reason-text" class="control-label">Reason (optional):</label>
            <textarea class="form-control" id="reason-text"></textarea>
          </div>

        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-success">Send request</button>
      </div>
    </div>
  </div>
</div>

{{> footer }}
