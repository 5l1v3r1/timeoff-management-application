
{{> header }}

<h1>{{logged_user.name}} {{logged_user.lastname}}'s calendar</h1>

<div class="row">
    <div class="col-md-3">Employee calendar</div>
    <form id="book_time_off_frm" method="POST" action="">
    <div class="col-md-2 col-md-offset-6">
      <span>Days remaining<br>{{#with current_user }}{{ this.calculate_number_of_days_available_in_allowence ../current_year }} out of {{this.calculate_total_number_of_days_n_allowence ../current_year}}{{/with}}</span>
    </div>
    <div class="col-md-1">
        <button type="button" class="btn btn-info pull-right" data-toggle="modal" data-target="#book_leave_modal" id="book_time_off_btn">Book time off</button>
    </div>
    </form>
</div>

<div class="row">&nbsp;</div>

{{> show_flash_messages }}

<nav>
  <ul class="pager">
    {{#if show_full_year}}
    <li class="previous"><a href="/calendar/?year={{previous_year}}{{#if show_full_year}}&show_full_year=1{{/if}}"><span aria-hidden="true">&larr;</span>{{previous_year}} </a></li>
    {{/if}}
    <span><strong>{{#if show_full_year}}January - December {{current_year}}{{else}}Next four months{{/if}}</strong></span>

    {{#if show_full_year}}
    <li class="next"><a href="/calendar/?year={{next_year}}{{#if show_full_year}}&show_full_year=1{{/if}}">{{next_year}} <span aria-hidden="true">&rarr;</span></a></li>
    {{/if}}
  </ul>
</nav>

<div class="row clearfix">

    {{# each calendar}}
    <div class="col-md-3 month_container">
        <table class="calendar_month month_{{ this.month }}">
        <thead>
        <tr>
            <td colspan="14">{{#if ../show_full_year}}{{this.month}}{{else}}{{#with this.moment }}{{this.format 'MMMM, YYYY'}}{{/with}}{{/if}}</td>
        </tr>
        <tr>
            <td colspan="2">M</td>
            <td colspan="2">T</td>
            <td colspan="2">W</td>
            <td colspan="2">T</td>
            <td colspan="2">F</td>
            <td colspan="2">S</td>
            <td colspan="2">S</td>
        </tr>
        </thead>
        <tbody>
        {{#each this.weeks }}
        <tr>
            {{#each this}}
              {{> calendar_cell day = this}}
            {{/each}}
        </tr>
        {{/each}}

        </tbody></table>
    </div>
    {{/each}}

</div>

<div class="row">
  <div class="col-md-2 col-md-offset-5">
    {{# unless show_full_year}}
      <a href="/calendar/?show_full_year=1"><span aria-hidden="true">More...</span></a>
    {{else}}
      <a href="/calendar/"><span aria-hidden="true">Less...</span></a>
    {{/unless}}
  </div>
<div>

{{# unless show_full_year}}
  {{> user_requests leaves=current_user.my_leaves }}
{{/unless}}

{{# if show_full_year}}
  {{> book_leave_modal container_id='book_leave_modal' leave_modal_form_action='/calendar/bookleave/' redirect_back_to='/calendar/?show_full_year=1'}}
{{else}}
  {{> book_leave_modal container_id='book_leave_modal' leave_modal_form_action='/calendar/bookleave/'}}
{{/if}}

{{> footer }}
