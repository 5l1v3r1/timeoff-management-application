
{{> header }}

<h1>Leave types</h1>

{{> show_flash_messages }}

<div class="row">
    <div class="col-md-3">Leave Types settings</div>
    <div class="col-md-3 col-md-offset-6">
        <button type="button" class="pull-right btn btn-info" id="add_new_department_btn">Add new</button>
    </div>
</div>

<div class="row">&nbsp;</div>

<div class="row">
    <div class="col-md-5">Name</div>
    <div class="col-md-1">Color</div>
</div>

<div class="row">&nbsp;</div>

<form id="delete_form" method="post" action="/settings/leavetypes/delete/"></form>

<form method="post" action="/settings/leavetypes/">

{{# unless company.leave_types.length }}
<div class="row">
    <div class="col-md-4">No Leave type records</div>
</div>
{{/unless}}


{{#each company.leave_types}}
<div class="row">

    <div class="col-md-5">
        <input type="text" class="form-control" value="{{name}}" name="name__{{@index}}">
    </div>

    <div class="col-md-2">
        <input type="text" class="form-control" value="{{color}}" name="color__{{@index}}">
    </div>

    <div class="col-md-3">
        <input name="use_allowance__{{@index}}" id="use_allowance__{{@index}}" type="checkbox" {{#if use_allowance}}checked="checked"{{/if}}>
        <label for="use_allowance__{{@index}}" class="control-label">Use allowance</label>
    </div>

    <div class="col-md-2">
        <button type="button" class="close" aria-label="Close" value="{{@index}}"><span aria-hidden="true">&times;</span></button>
    </div>
</div>

<div class="row">&nbsp;</div>

{{/each}}


<div id="add_new_department_row" class="row hidden">

    <div class="col-md-5">
        <input type="text" class="form-control" value="{{name}}" name="name__new">
    </div>

    <div class="col-md-2">
        <input type="text" class="form-control" value="{{color}}" name="color__new">
    </div>

    <div class="col-md-3">
        <input name="use_allowance__new" id="use_allowance__new" type="checkbox">
        <label for="use_allowance__new" class="control-label">Use allowance</label>
    </div>

</div>

<div class="row">&nbsp;</div>

<div class="row">
    <div class="col-md-4">
        <button type="submit" class="btn btn-success">Save changes</button>
    </div>
</div>

</form>

<div class="row">&nbsp;</div>

{{> footer }}
