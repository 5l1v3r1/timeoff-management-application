
{{> header }}

<h1>Staff</h1>

{{> show_flash_messages }}

<div class="row">
    <div class="col-md-3 lead">{{company.name}}'s staff</div>
    <form id="add_new_user_frm" method="get" action="/users/add/">
        <div class="col-md-3 col-md-offset-6">
        <button type="submit" class="pull-right btn btn-info" id="add_new_department_btn">Add user</button>
        </div>
    </form>
</div>

<div class="row">&nbsp;</div>

<div class="row">
    <div class="content">
        <div class="col-md-3">
            <p class="specific">Departments</p>
            <ul class="all-departments">
                <li><a href="/users/">All</a></li>
{{#each company.departments}}
                <li><a href="/users/?department={{this.id}}">{{this.name}}</a></li>
{{/each}}
            </ul>
        </div>

        <div class="col-md-9">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Name</th>
                <th>Department</th>
                <th>Is Administrator?</th>
                <th><span>Days used</span></th>
              </tr>
            </thead>
            <tbody>
    {{# each users}}
              <tr>
                <td class="user-link-cell"><a href="/users/edit/{{this.id}}/">{{this.full_name}}</a></td>
                <td class="user_department">{{this.department.name}}</td>
                <td>{{# if this.admin }}Yes{{else}}{{/if}}</td>
                <td><span>{{this.calculate_number_of_days_taken_from_allowence}}</span></td>
              </tr>
    {{/each}}
            </tbody>
          </table>
        </div>

    </div>
</div>



<div class="row">&nbsp;</div>

{{> footer }}
